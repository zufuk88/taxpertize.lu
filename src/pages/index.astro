---

<Layout title="Taxpertize - Premium Tax Advisory Luxembourg">
	<main>
		<Hero
			title="Taxpertize"
			subtitle="Luxembourg"
			description="Strategic tax optimization and compliance solutions for international businesses, investment funds, and high-net-worth individuals"
			primaryCTA={{
				text: "Schedule Consultation",
				href: "mailto:contact@taxpertize.lu"
			}}
			secondaryCTA={{
				text: "Discover Our Expertise",
				href: "#services"
			}}
		/>

		<Services
			sectionLabel="Our Expertise"
			sectionTitle="Tailored Tax Solutions"
			sectionSubtitle="Delivering sophisticated tax strategies across three core practice areas"
			services={servicesData}
		/>

		<About
			sectionLabel={aboutContent.sectionLabel}
			title={aboutContent.title}
			titleAccent={aboutContent.titleAccent}
			leadText={aboutContent.leadText}
			paragraphs={aboutContent.paragraphs}
			stats={aboutContent.stats}
			values={aboutContent.values}
			testimonial={aboutContent.testimonial}
		/>

		<FAQ
			sectionLabel="Frequently Asked Questions"
			sectionTitle="Expert Answers"
			sectionSubtitle="Clear guidance on complex tax matters"
			faqs={faqData}
		/>
	</main>
</Layout>